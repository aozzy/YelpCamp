<% layout('layouts/boilerplate') %> 
 <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    
    <div class="col-md-6 offset-md-3">
      <form action="/campgrounds/<%=foundCamp._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
    
          <label class="form-label for="title">Title</label>
          <input  class="form-control" type="text" name="campground[title]" id="title"  value="<%= foundCamp.title %>" required>
        <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" name="campground[location]" id="location" value="<%= foundCamp.location %>" required>
    
        </div>
        <div class="mb-3">
          <div class="form-file mb-3">
            <!-- <label class="form-label" for="image">Image Url</label>
            <input class="form-control" type="text" name="campground[image]" id="image" required> -->
            <div class="form-file custom-file mb-3">
              <label for="formFile custom-file-label" class="form-label" form="image">Images</label>
              <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="valid-feedback">
              Looks Good!
            </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Campground Price</label>
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Â£</span>
            <input type="text" class="form-control" placeholder="0.0" name="campground[price]" aria-label="price-label" aria-describedby="" id="price-label" value="<%= foundCamp.price %>" required>
            <div class="valid-feedback">Looks Good!</div>
          </div>
        </div>
    
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" name="campground[description]" id="description" required> <%= foundCamp.description %></textarea>
          <div class="valid-feedback">Looks Good!</div>
        </div>
    
        <div class="mb-3">
          <% foundCamp.images.forEach((el,i)=>{ %>
            <img src="<%= el.thumbnail %>" class="img-thumbnail" alt="">
            <div class="form-check-inline">
              <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=el.filename%>">
              <label for="image-<%=i%>">delete</label>
            </div>
        <%  }) %> 
        </div>
        <div class="mb-3">
    
          <button class="btn btn-info">Update Campground</button>
        </div>
      </form>
      
      <a href="/campgrounds/<%= foundCamp._id %> ">Back to Campground</a>
    
    </div>
    </div>
    
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  
  